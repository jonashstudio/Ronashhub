-- Ronash Hub UI
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "RonashHubUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 350)
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -175)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Visible = true
mainFrame.Parent = screenGui

local mainCorner = Instance.new("UICorner")
mainCorner.CornerRadius = UDim.new(0, 10)
mainCorner.Parent = mainFrame

-- Top Bar
local topBar = Instance.new("Frame")
topBar.Size = UDim2.new(1, 0, 0, 30)
topBar.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
topBar.BorderSizePixel = 0
topBar.Parent = mainFrame

local title = Instance.new("TextLabel")
title.Text = "⚡ Ronash Hub"
title.Size = UDim2.new(1, -60, 1, 0)
title.Position = UDim2.new(0, 10, 0, 0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Font = Enum.Font.GothamBold
title.TextSize = 14
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1
title.Parent = topBar

-- Close Button
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 30, 1, 0)
closeBtn.Position = UDim2.new(1, -30, 0, 0)
closeBtn.Text = "❌"
closeBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 14
closeBtn.Parent = topBar

-- Sidebar
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 150, 1, -30)
sidebar.Position = UDim2.new(0, 0, 0, 30)
sidebar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
sidebar.BorderSizePixel = 0
sidebar.Parent = mainFrame

local sidebarCorner = Instance.new("UICorner")
sidebarCorner.CornerRadius = UDim.new(0, 10)
sidebarCorner.Parent = sidebar

-- Content Frame
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -150, 1, -30)
contentFrame.Position = UDim2.new(0, 150, 0, 30)
contentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
contentFrame.BorderSizePixel = 0
contentFrame.Parent = mainFrame

local contentCorner = Instance.new("UICorner")
contentCorner.CornerRadius = UDim.new(0, 10)
contentCorner.Parent = contentFrame

-- Sidebar button creator
local function createSidebarButton(name, order, callback)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 35)
    button.Position = UDim2.new(0, 5, 0, 10 + (order * 40))
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    button.Text = name
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.GothamBold
    button.TextSize = 14
    button.Parent = sidebar

    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 6)
    btnCorner.Parent = button

    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    end)

    button.MouseButton1Click:Connect(callback)
end

-- Pages
local pages = {}
local function createPage(name)
    local page = Instance.new("Frame")
    page.Size = UDim2.new(1, 0, 1, 0)
    page.BackgroundTransparency = 1
    page.Visible = false
    page.Parent = contentFrame
    pages[name] = page
    return page
end
local function showPage(name)
    for _, page in pairs(pages) do
        page.Visible = false
    end
    if pages[name] then
        pages[name].Visible = true
    end
end

-- Functions to create controls
local function createSetting(page, labelText, defaultValue, minValue, maxValue, step, applyFunc)
    local label = Instance.new("TextLabel")
    label.Text = labelText .. ": " .. defaultValue
    label.Size = UDim2.new(0, 200, 0, 30)
    label.Position = UDim2.new(0, 20, 0, #page:GetChildren() * 40)
    label.TextColor3 = Color3.new(1,1,1)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.BackgroundTransparency = 1
    label.Parent = page

    local minus = Instance.new("TextButton")
    minus.Size = UDim2.new(0, 30, 0, 30)
    minus.Position = UDim2.new(0, 230, 0, #page:GetChildren() * 40)
    minus.Text = "-"
    minus.BackgroundColor3 = Color3.fromRGB(60,60,60)
    minus.TextColor3 = Color3.new(1,1,1)
    minus.Parent = page

    local plus = Instance.new("TextButton")
    plus.Size = UDim2.new(0, 30, 0, 30)
    plus.Position = UDim2.new(0, 270, 0, #page:GetChildren() * 40)
    plus.Text = "+"
    plus.BackgroundColor3 = Color3.fromRGB(60,60,60)
    plus.TextColor3 = Color3.new(1,1,1)
    plus.Parent = page

    local value = defaultValue

    local function updateLabel()
        label.Text = labelText .. ": " .. tostring(value)
        applyFunc(value)
    end
    updateLabel()

    plus.MouseButton1Click:Connect(function()
        value = math.min(maxValue, value + step)
        updateLabel()
    end)
    minus.MouseButton1Click:Connect(function()
        value = math.max(minValue, value - step)
        updateLabel()
    end)
end

-- Pages
local statusPage = createPage("Status")
local speedPage = createPage("Speed")
local jumpPage = createPage("Jump")
local gravityPage = createPage("Gravity")
local flyPage = createPage("Fly")

-- Sidebar buttons
createSidebarButton("Status", 0, function() showPage("Status") end)
createSidebarButton("Speed", 1, function() showPage("Speed") end)
createSidebarButton("Jump", 2, function() showPage("Jump") end)
createSidebarButton("Gravity", 3, function() showPage("Gravity") end)
createSidebarButton("Fly", 4, function() showPage("Fly") end)

-- Status Page (AFK Toggle)
local afkLabel = Instance.new("TextLabel")
afkLabel.Text = "AFK Status: OFF"
afkLabel.Size = UDim2.new(1, -20, 0, 40)
afkLabel.Position = UDim2.new(0, 10, 0, 10)
afkLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
afkLabel.Font = Enum.Font.GothamBold
afkLabel.TextSize = 18
afkLabel.BackgroundTransparency = 1
afkLabel.Parent = statusPage

local afkButton = Instance.new("TextButton")
afkButton.Text = "Toggle AFK"
afkButton.Size = UDim2.new(0, 200, 0, 40)
afkButton.Position = UDim2.new(0, 20, 0, 60)
afkButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
afkButton.TextColor3 = Color3.fromRGB(255, 255, 255)
afkButton.Font = Enum.Font.GothamBold
afkButton.TextSize = 14
afkButton.Parent = statusPage

local afkCorner = Instance.new("UICorner")
afkCorner.CornerRadius = UDim.new(0, 6)
afkCorner.Parent = afkButton

local isAFK = false
afkButton.MouseButton1Click:Connect(function()
    isAFK = not isAFK
    if isAFK then
        afkLabel.Text = "AFK Status: ON"
    else
        afkLabel.Text = "AFK Status: OFF"
    end
end)

-- Speed, Jump, Gravity Pages
createSetting(speedPage, "Speed", 16, 16, 200, 5, function(v)
    if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character.Humanoid.WalkSpeed = v
    end
end)
createSetting(jumpPage, "Jump", 50, 50, 300, 5, function(v)
    if player.Character and player.Character:FindFirstChildOfClass("Humanoid") then
        player.Character.Humanoid.JumpPower = v
    end
end)
createSetting(gravityPage, "Gravity", 196, 0, 400, 10, function(v)
    workspace.Gravity = v
end)

-- Fly Page
local flying = false
local flySpeed = 50

local flyLabel = Instance.new("TextLabel")
flyLabel.Text = "Fly Speed: " .. flySpeed
flyLabel.Size = UDim2.new(0, 200, 0, 30)
flyLabel.Position = UDim2.new(0, 20, 0, 10)
flyLabel.TextColor3 = Color3.new(1,1,1)
flyLabel.Font = Enum.Font.GothamBold
flyLabel.TextSize = 14
flyLabel.BackgroundTransparency = 1
flyLabel.Parent = flyPage

local flyMinus = Instance.new("TextButton")
flyMinus.Size = UDim2.new(0, 30, 0, 30)
flyMinus.Position = UDim2.new(0, 230, 0, 10)
flyMinus.Text = "-"
flyMinus.BackgroundColor3 = Color3.fromRGB(60,60,60)
flyMinus.TextColor3 = Color3.new(1,1,1)
flyMinus.Parent = flyPage

local flyPlus = Instance.new("TextButton")
flyPlus.Size = UDim2.new(0, 30, 0, 30)
flyPlus.Position = UDim2.new(0, 270, 0, 10)
flyPlus.Text = "+"
flyPlus.BackgroundColor3 = Color3.fromRGB(60,60,60)
flyPlus.TextColor3 = Color3.new(1,1,1)
flyPlus.Parent = flyPage

flyMinus.MouseButton1Click:Connect(function()
    flySpeed = math.max(10, flySpeed - 5)
    flyLabel.Text = "Fly Speed: " .. flySpeed
end)
flyPlus.MouseButton1Click:Connect(function()
    flySpeed = math.min(200, flySpeed + 5)
    flyLabel.Text = "Fly Speed: " .. flySpeed
end)

local flyBtn = Instance.new("TextButton")
flyBtn.Text = "Toggle Fly"
flyBtn.Size = UDim2.new(0, 200, 0, 40)
flyBtn.Position = UDim2.new(0, 20, 0, 60)
flyBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
flyBtn.TextColor3 = Color3.new(1,1,1)
flyBtn.Font = Enum.Font.GothamBold
flyBtn.TextSize = 14
flyBtn.Parent = flyPage

local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local flyConnection

flyBtn.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        local char = player.Character
        local hrp = char and char:FindFirstChild("HumanoidRootPart")
        if not hrp then return end
        local humanoid = char:FindFirstChildOfClass("Humanoid")
        if humanoid then humanoid.PlatformStand = true end

        flyConnection = RunService.RenderStepped:Connect(function()
            local cam = workspace.CurrentCamera
            local moveDir = Vector3.new()
            if UIS:IsKeyDown(Enum.KeyCode.W) then
                moveDir = moveDir + cam.CFrame.LookVector
            end
            if UIS:IsKeyDown(Enum.KeyCode.S) then
                moveDir = moveDir - cam.CFrame.LookVector
            end
            if UIS:IsKeyDown(Enum.KeyCode.A) then
                moveDir = moveDir - cam.CFrame.RightVector
            end
            if UIS:IsKeyDown(Enum.KeyCode.D) then
                moveDir = moveDir + cam.CFrame.RightVector
            end
            if UIS:IsKeyDown(Enum.KeyCode.Space) then
                moveDir = moveDir + Vector3.new(0,1,0)
            end
            if UIS:IsKeyDown(Enum.KeyCode.LeftShift) then
                moveDir = moveDir - Vector3.new(0,1,0)
            end
            hrp.Velocity = moveDir * flySpeed
        end)
    else
        if flyConnection then flyConnection:Disconnect() end
        local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then humanoid.PlatformStand = false end
        if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            player.Character.HumanoidRootPart.Velocity = Vector3.new(0,0,0)
        end
    end
end)

-- Floating Circle Open Button
local openBtn = Instance.new("TextButton")
openBtn.Size = UDim2.new(0, 80, 0, 80)
openBtn.Position = UDim2.new(0, 20, 0.8, 0)
openBtn.Text = "Ronash"
openBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
openBtn.TextColor3 = Color3.new(1,1,1)
openBtn.Font = Enum.Font.GothamBold
openBtn.TextSize = 14
openBtn.Active = true
openBtn.Draggable = true
openBtn.Parent = screenGui

local openCorner = Instance.new("UICorner")
openCorner.CornerRadius = UDim.new(1, 0)
openCorner.Parent = openBtn

openBtn.Visible = false

-- Close logic
closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    openBtn.Visible = true
end)

-- Default page
showPage("Status")
