afkLabel.Parent = statusPage

----------------------------------------------------
-- PLAYER MODS PAGE (Speed, Jump, Gravity, Fly)
----------------------------------------------------
local humanoid = LocalPlayer.Character:WaitForChild("Humanoid")
local flyEnabled = false
local flySpeed = 50
local bodyVel

-- Helper UI function
local function createStatControl(parent, text, startValue, step, callback, order)
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 350, 0, 40)
    frame.Position = UDim2.new(0, 20, 0, 10 + (order * 50))
    frame.BackgroundTransparency = 1
    frame.Parent = parent

    local label = Instance.new("TextLabel")
    label.Text = text .. ": " .. startValue
    label.Size = UDim2.new(0, 200, 1, 0)
    label.TextColor3 = Color3.new(1,1,1)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.BackgroundTransparency = 1
    label.Parent = frame

    local plus = Instance.new("TextButton")
    plus.Text = "+"
    plus.Size = UDim2.new(0, 40, 1, 0)
    plus.Position = UDim2.new(1, -40, 0, 0)
    plus.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    plus.TextColor3 = Color3.new(1,1,1)
    plus.Parent = frame

    local minus = Instance.new("TextButton")
    minus.Text = "-"
    minus.Size = UDim2.new(0, 40, 1, 0)
    minus.Position = UDim2.new(1, -90, 0, 0)
    minus.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    minus.TextColor3 = Color3.new(1,1,1)
    minus.Parent = frame

    local value = startValue
    local function updateLabel()
        label.Text = text .. ": " .. value
        callback(value)
    end

    plus.MouseButton1Click:Connect(function()
        value = value + step
        updateLabel()
    end)

    minus.MouseButton1Click:Connect(function()
        value = math.max(0, value - step)
        updateLabel()
    end)

    updateLabel()
end

-- SPEED
createStatControl(modsPage, "Speed", 16, 5, function(val)
    if humanoid then humanoid.WalkSpeed = val end
end, 0)

-- JUMP
createStatControl(modsPage, "Jump", 50, 5, function(val)
    if humanoid then humanoid.JumpPower = val end
end, 1)

-- GRAVITY
createStatControl(modsPage, "Gravity", workspace.Gravity, 25, function(val)
    workspace.Gravity = val
end, 2)

-- FLY
local flyLabel
flyLabel = createStatControl(modsPage, "Fly Speed", flySpeed, 5, function(val)
    flySpeed = val
end, 3)

local flyToggle = Instance.new("TextButton")
flyToggle.Text = "Toggle Fly (OFF)"
flyToggle.Size = UDim2.new(0, 200, 0, 40)
flyToggle.Position = UDim2.new(0, 20, 0, 10 + (4 * 50))
flyToggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
flyToggle.TextColor3 = Color3.new(1,1,1)
flyToggle.Font = Enum.Font.GothamBold
flyToggle.TextSize = 14
flyToggle.Parent = modsPage

flyToggle.MouseButton1Click:Connect(function()
    flyEnabled = not flyEnabled
    flyToggle.Text = "Toggle Fly (".. (flyEnabled and "ON" or "OFF") ..")"
    if not flyEnabled and bodyVel then
        bodyVel:Destroy()
        bodyVel = nil
    end
end)

RunService.RenderStepped:Connect(function()
    if flyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local root = LocalPlayer.Character.HumanoidRootPart
        if not bodyVel then
            bodyVel = Instance.new("BodyVelocity")
            bodyVel.MaxForce = Vector3.new(9e9, 9e9, 9e9)
            bodyVel.Parent = root
        end

        local move = Vector3.new()
        if UIS:IsKeyDown(Enum.KeyCode.W) then move = move + (workspace.CurrentCamera.CFrame.LookVector) end
        if UIS:IsKeyDown(Enum.KeyCode.S) then move = move - (workspace.CurrentCamera.CFrame.LookVector) end
        if UIS:IsKeyDown(Enum.KeyCode.A) then move = move - (workspace.CurrentCamera.CFrame.RightVector) end
        if UIS:IsKeyDown(Enum.KeyCode.D) then move = move + (workspace.CurrentCamera.CFrame.RightVector) end
        if UIS:IsKeyDown(Enum.KeyCode.Space) then move = move + Vector3.new(0,1,0) end
        if UIS:IsKeyDown(Enum.KeyCode.LeftShift) then move = move - Vector3.new(0,1,0) end

        bodyVel.Velocity = move * flySpeed
    elseif bodyVel then
        bodyVel.Velocity = Vector3.new(0,0,0)
    end
end)

----------------------------------------------------
-- OPEN / CLOSE BUTTON
----------------------------------------------------
local openBtn = Instance.new("TextButton")
openBtn.Size = UDim2.new(0, 120, 0, 40)
openBtn.Position = UDim2.new(0, 20, 0.8, 0)
openBtn.Text = "Open Hub"
openBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
openBtn.TextColor3 = Color3.new(1,1,1)
openBtn.Font = Enum.Font.GothamBold
openBtn.TextSize = 16
openBtn.Parent = screenGui
openBtn.Visible = false

local openCorner = Instance.new("UICorner")
openCorner.CornerRadius = UDim.new(0, 8)
openCorner.Parent = openBtn

closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    openBtn.Visible = true
end)
openBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    openBtn.Visible = false
end)

-- Default page
showPage("PlayerMods")
